<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.facesearch.FaceMainActivity">

    <TextView
        android:id="@+id/face_main_title"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="欢迎使用人脸搜索功能"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />

    <Button
        android:id="@+id/face_add"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="人脸上传"
        app:layout_constraintTop_toBottomOf="@+id/face_main_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/face_search"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="人脸检测"
        app:layout_constraintTop_toBottomOf="@+id/face_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/face_match"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="人脸对比"
        app:layout_constraintTop_toBottomOf="@+id/face_search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/face_back"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="返回"
        app:layout_constraintTop_toBottomOf="@+id/face_match"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>