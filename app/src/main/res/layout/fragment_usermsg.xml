<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/msg_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/defult"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10" />

    <TextView
        android:id="@+id/name_tag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:text="用户名"
        app:layout_constraintTop_toBottomOf="@+id/msg_img"
        app:layout_constraintRight_toLeftOf="@+id/msg_img"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/msg_username"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/msg_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/name_tag"/>

    <TextView
        android:id="@+id/time_tag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:text="注册时间"
        app:layout_constraintTop_toBottomOf="@+id/msg_username"
        app:layout_constraintRight_toLeftOf="@+id/msg_img"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/msg_username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/time_tag"/>

    <TextView
        android:id="@+id/num_tag"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:text="照片数"
        app:layout_constraintTop_toBottomOf="@+id/msg_time"
        app:layout_constraintRight_toLeftOf="@+id/msg_img"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/msg_num"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/msg_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/num_tag"/>


    <Button
        android:id="@+id/logout"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="注销"
        app:layout_constraintTop_toBottomOf="@+id/msg_num"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/toface"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="人脸搜索"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logout"/>

</androidx.constraintlayout.widget.ConstraintLayout>